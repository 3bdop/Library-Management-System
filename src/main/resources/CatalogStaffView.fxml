<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="614.0" prefWidth="1000.0" style="-fx-background-color: lightblue;" stylesheets="@listview.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Text fill="#ff8805" layoutX="30.0" layoutY="69.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add new book" textAlignment="CENTER" wrappingWidth="149.0">
            <font>
                <Font name="System Bold" size="19.0" />
            </font>
        </Text>
        <TextField fx:id="author" layoutX="30.0" layoutY="98.0" prefHeight="40.0" prefWidth="190.0" promptText="Author name" />
        <TextField fx:id="book" layoutX="30.0" layoutY="143.0" prefHeight="40.0" prefWidth="190.0" promptText="Book name" />
        <TextField fx:id="isbn" layoutX="30.0" layoutY="191.0" prefHeight="40.0" prefWidth="190.0" promptText="ISBN" />
        <TextField fx:id="category" layoutX="30.0" layoutY="239.0" prefHeight="40.0" prefWidth="190.0" promptText="Category" />
        <Button layoutX="82.0" layoutY="314.0" mnemonicParsing="false" onAction="#addItem" style="-fx-background-color: #0598ff; -fx-font-weight: bold;" text="Add book" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <ListView fx:id="booksList" layoutX="359.0" layoutY="91.0" prefHeight="406.0" prefWidth="596.0" stylesheets="@listview.css" />
        <TextField fx:id="search" layoutX="359.0" layoutY="50.0" onKeyTyped="#searchBook" prefHeight="31.0" prefWidth="427.0" promptText="Search..." />
        <Button fx:id="edit" layoutX="809.0" layoutY="47.0" mnemonicParsing="false" onAction="#editBook" style="-fx-background-color: #0598ff; -fx-font-weight: bold;" text="Edit" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Button fx:id="delete" layoutX="871.0" layoutY="47.0" mnemonicParsing="false" onAction="#deleteBook" style="-fx-background-color: #0598ff; -fx-font-weight: bold;" text="Delete" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
      <Button layoutX="879.0" layoutY="552.0" mnemonicParsing="false" onAction="#addItem" style="-fx-background-color: #0598ff; -fx-font-weight: bold;" text="Log Out" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
